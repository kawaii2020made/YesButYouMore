<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:YesButYouMore">
    <!--Lighter Black-->
    <Color x:Key="LightBlack">#202020</Color>
    <SolidColorBrush x:Key="LightBlackBrush" Color="{StaticResource LightBlack}"/>

    <!--Dark Grey-->
    <Color x:Key="DarkGrey">#373737</Color>
    <SolidColorBrush x:Key="DarkGreyBrush" Color="{StaticResource DarkGrey}"/>

    <!--Dark White-->
    <Color x:Key="DarkWhite">#e6e6e6</Color>
    <SolidColorBrush x:Key="DarkWhiteBrush" Color="{StaticResource DarkWhite}"/>

    <!--Grey to black gradient-->
    <LinearGradientBrush x:Key="BlackGreyGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource DarkGrey}" Offset="0.1"/>
        <GradientStop Color="{StaticResource LightBlack}" Offset="0.9"/>
        <GradientStop Color="{StaticResource DarkGrey}" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>